{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ui/src/app-sidebar.tsx",
    "src/components/auth-buttons.tsx",
    "../../packages/ui/src/background-media.tsx",
    "../../packages/ui/src/category-input.tsx",
    "../../packages/ui/src/chart-area-interactive.tsx",
    "../../packages/ui/src/data-table.tsx",
    "../../packages/ui/src/feature-list.tsx",
    "../../packages/ui/src/hero.tsx",
    "../../packages/ui/src/link-hub.tsx",
    "../../packages/ui/src/login-form.tsx",
    "../../packages/ui/src/mode-switcher.tsx",
    "../../packages/ui/src/nav-documents.tsx",
    "../../packages/ui/src/nav-main.tsx",
    "../../packages/ui/src/nav-secondary.tsx",
    "../../packages/ui/src/nav-user.tsx",
    "../../packages/ui/src/post-form.tsx",
    "../../packages/ui/src/post-list.tsx",
    "../../packages/ui/src/section-cards.tsx",
    "../../packages/ui/src/session-provider.tsx",
    "../../packages/ui/src/single-post.tsx",
    "../../packages/ui/src/site-footer.tsx",
    "../../packages/ui/src/site-header.tsx",
    "../../packages/ui/src/tailwind-indicator.tsx",
    "../../packages/ui/src/theme-provider.tsx",
    "../../packages/ui/src/user-menu.tsx"
  ],
  "exclude": ["node_modules"]
}
